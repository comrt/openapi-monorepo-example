{
  "name": "example-api",
  "targets": {
    "build": {
      "command": "redocly bundle apis/example-api/openapi.yaml -o dist/apis/example-api/example-api-openapi.yaml"
    },
    "publish": {
    },
    "lint": {
      "command": "redocly lint apis/example-api/openapi.yaml"
    },
    "spectral-lint": {
      "command": "spectral lint apis/example-api/openapi.yaml "
    },
    "generate": {
      "command": "rimraf gen && openapi-generator-cli generate -i dist/apis/example-api/bundle.yaml -c config.yaml -g jaxrs-spec -o gen/apis/example-api",
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "generate-client": {
      "command": "rimraf gen && openapi-generator-cli generate -i dist/apis/example-api/bundle.yaml -c config-angular.yaml -g typescript-angular -o gen/apis/example-api",
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "prepare-membrane": {
      "command": "redocly bundle example-api@membrane -o dist/apis/example-api/bundle.yaml"
    },
    "membrane": {
      "command": "docker run --rm -p 2000:2000 -v \"$(pwd)/proxies.xml:/opt/membrane/conf/proxies.xml\" -v \"$(pwd)/dist/apis/example-api/bundle.yaml:/opt/membrane/conf/openapi.yaml\" predic8/membrane:5.5.2",
      "dependsOn": [
        {
          "target": "prepare-membrane"
        }
      ]
    },
    "mock": {
      "command": "prism mock dist/apis/example-api/example-api-openapi.yaml"
    }
  }
}